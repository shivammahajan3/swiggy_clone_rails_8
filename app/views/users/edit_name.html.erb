<h1 class="text-3xl font-bold text-center my-6">Update Name</h1>

<%= form_with model: current_user, url: user_update_name_path(current_user), method: :patch, local: true do |form| %>
  <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg">
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 font-medium" %>
      <%= form.text_field :name, class: "mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-between">
      <%= form.submit 'Update Name', class: 'w-full py-2 px-4 bg-green-600 text-white rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500' %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', current_user, class: 'mt-4 block text-center text-blue-500 hover:text-blue-700' %>
