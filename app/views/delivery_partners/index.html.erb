<h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Orders for Delivery</h1>

<% if @orders.any? %>
    <% @orders.each do |order| %>
      <div class="space-y-6">
        <div class="bg-gray-100 shadow-md p-4 max-w-md mx-auto min-h-[400px]"> <!-- Added min-height -->
          <h3 class="text-3xl font-bold text-center text-orange-800 mb-4">Restaurant : <%= order.restro.name %></h3>
          <p class="text-md font-semibold text-gray-700 mb-2">Restaurant Location: <%= order.restro.address %></p>

          <div class="max-w-sm mx-auto bg-gray-50 p-4 rounded-lg shadow-md mb-4">
            <h3 class="text-lg font-semibold text-gray-700 mb-3">Customer Information:</h3>
            <p><strong>Name:</strong> <%= order.user.name %></p>
            <p><strong>Phone:</strong> <%= order.user.phone_number %></p>
            <p><strong>Address:</strong> <%= order.user.address %></p>
          </div>

          <div class="flex justify-between items-center border-b pb-4 mb-4">
            <div>
              <h2 class="text-xl font-semibold text-gray-800">Order #<%= order.id %></h2>
            </div>
          </div>

          <div class="flex justify-center space-x-4 mt-auto">
            <%= button_to 'Accept', accept_order_path(id: order.id), class: "text-sm font-bold text-white bg-green-600 py-2 px-4 rounded hover:bg-green-700" %>
          </div>
        
        </div>
        <hr class="my-4">
      </div>
    <% end %>
<% else %>
  <p class="text-xl text-gray-600 text-center">No active orders for delivery!</p>
<% end %>
