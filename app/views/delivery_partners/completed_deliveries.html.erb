<h1 class="text-3xl font-bold text-center mb-8 text-indigo-600">Completed Deliveries</h1>

<div class="max-w-4xl mx-auto px-4">
  <% @orders.each do |order| %>
    <div class="bg-white p-6 rounded-lg shadow-lg mb-6 flex justify-between items-center">
      <div class="flex flex-col space-y-3 w-2/3">
        <p class="text-lg font-semibold text-gray-800">Restaurant: <span class="font-normal text-gray-600"><%= order.restro.name %></span></p>
        <p class="text-lg font-semibold text-gray-800">Order #: <span class="font-normal text-gray-600"><%= order.id %></span></p>
        <p class="text-sm text-gray-600">Status: <span class="font-medium text-indigo-600"><%= order.status.capitalize %></span></p>
        <p class="text-lg font-semibold text-gray-800">Delivered To: <span class="font-normal text-gray-600"><%= order.user.name %></span></p>
      </div>

      <div class="flex flex-col justify-center items-center">
        <div class="bg-green-500 text-white py-2 px-4 rounded-lg text-center w-full hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50">
          Delivered
        </div>
      </div>
    </div>
  <% end %>
</div>
